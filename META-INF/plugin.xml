
<idea-plugin version="2">
	<id>com.kaylerrenslow.plugin.armaplugin.id</id>
	<name>Arma SQF Language Plugin</name>
	<version>1.0.0</version>
	<vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>
	<description>
		Plugin to offer smart editing of Arma games' mission files.
	</description>

	<change-notes></change-notes>

	<idea-version since-build="131"/>
	<extensions defaultExtensionNs="com.intellij">
		<!-- SQF Language -->
		<fileTypeFactory implementation="com.kaylerrenslow.plugin.lang.sqf.SQFFileTypeFactory"/>
		<lang.parserDefinition language="Arma.SQF" implementationClass="com.kaylerrenslow.plugin.lang.sqf.psi.SQFParserDefinition"/>
		<lang.syntaxHighlighterFactory key="Arma.SQF" implementationClass="com.kaylerrenslow.plugin.lang.sqf.highlighting.SQFSyntaxHighlighterFactory"/>
		<colorSettingsPage implementation="com.kaylerrenslow.plugin.lang.sqf.highlighting.SQFColorSettingsPage"/>
		<completion.contributor language="Arma.SQF" implementationClass="com.kaylerrenslow.plugin.lang.sqf.psi.helpers.SQFCompletionContributor"/>
		<lang.documentationProvider language="Arma.SQF" implementationClass="com.kaylerrenslow.plugin.lang.sqf.psi.helpers.doc.SQFDocumentationProvider"/>
		<lang.commenter language="Arma.SQF" implementationClass="com.kaylerrenslow.plugin.lang.sqf.SQFCommenter"/>
		<annotator language="Arma.SQF" implementationClass="com.kaylerrenslow.plugin.lang.sqf.SQFAnnotator"/>

		<!-- Header Language -->
		<fileTypeFactory implementation="com.kaylerrenslow.plugin.lang.header.HeaderFileTypeFactory"/>
		<lang.parserDefinition language="Arma.Header" implementationClass="com.kaylerrenslow.plugin.lang.header.psi.HeaderParserDefinition"/>
		<lang.syntaxHighlighterFactory key="Arma.Header" implementationClass="com.kaylerrenslow.plugin.lang.header.highlighting.HeaderSyntaxHighlighterFactory"/>
		<colorSettingsPage implementation="com.kaylerrenslow.plugin.lang.header.highlighting.HeaderColorSettingsPage"/>
		<completion.contributor language="Arma.Header" implementationClass="com.kaylerrenslow.plugin.lang.header.psi.helpers.HeaderCompletionContributor"/>
		<lang.commenter language="Arma.Header" implementationClass="com.kaylerrenslow.plugin.lang.header.HeaderCommenter"/>

		<!-- Other things-->
		<moduleBuilder builderClass="com.kaylerrenslow.plugin.wizards.ArmaModuleBuilder" />
		<moduleType implementationClass="com.kaylerrenslow.plugin.wizards.ArmaModuleType" id="arma.moduleType" />

	</extensions>

	<application-components></application-components>

	<project-components></project-components>

	<actions>
		<group id="com.kaylerrenslow.plugin.dialog.actions.mainMenu.group" text="_Arma 3" description="Arma 3 Plugin Menu">
			<add-to-group group-id="MainMenu" anchor="last" />
			<action id="a3plugin.action.mm.pluginProps" class="com.kaylerrenslow.plugin.dialog.actions.mainMenu.Action_PluginProperties" text="Plugin Properties" description="Configure Arma Plugin Properties" />
			<action id="a3plugin.action.mm.about" class="com.kaylerrenslow.plugin.dialog.actions.mainMenu.Action_About" text="About" description="About the Plugin" />
		</group>
	</actions>


</idea-plugin>