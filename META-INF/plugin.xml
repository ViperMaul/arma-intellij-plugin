


<idea-plugin version="2">
  <id>com.kaylerrenslow.plugin.id</id>
  <name>Arma 3 SQF Language Plugin</name>
  <version>1.0.0</version>
  <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

  <description></description>

  <change-notes></change-notes>

  <idea-version since-build="131"/>
  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="com.kaylerrenslow.plugin.SQFFileTypeFactory"/>
    <lang.parserDefinition language="SQF" implementationClass="com.kaylerrenslow.plugin.psi.SQFParserDefinition"/>
    <lang.syntaxHighlighterFactory key="SQF" implementationClass="com.kaylerrenslow.plugin.SQFSyntaxHighlighterFactory"/>
    <colorSettingsPage implementation="com.kaylerrenslow.plugin.SQFColorSettingsPage"/>
  </extensions>

  <application-components></application-components>

  <project-components></project-components>

  <actions>
    <group id="com.kaylerrenslow.plugin.actions.mainMenu.group" text="_Arma 3" description="Arma 3 menu">
      <add-to-group group-id="MainMenu" anchor="last" />
      <action id="Myplugin.Textboxes" class="com.kaylerrenslow.plugin.actions.mainMenu.HiAction" text="Hi" description="A test menu item" />
    </group>
  </actions>


</idea-plugin>